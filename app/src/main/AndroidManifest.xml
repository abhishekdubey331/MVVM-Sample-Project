<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.connect.winuall">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
            android:name="com.winuall.connect.App"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">

        <!-- Activities -->
        <activity android:name="com.winuall.connect.ui.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.winuall.connect.ui.quizzes.QuizActivity"/>
        <activity android:name="com.winuall.connect.ui.profile.ProfileActivity">
        </activity>
        <activity android:name="com.winuall.connect.ui.settings.SettingsActivity">
        </activity>
        <activity android:name="com.winuall.connect.ui.notifications.NotificationsActivity">
        </activity>
    </application>

</manifest>